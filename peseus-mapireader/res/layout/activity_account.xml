<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/nav_bar_bg" >

        <Button
            android:id="@+id/btn_account_back"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/nav_back_selector" />

        <TextView
            android:id="@+id/tv_account_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/api_account"
            android:textColor="@color/Grey"
            android:textSize="@dimen/font_size_xlarge" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_account_name_login_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_name_hint" />

                <EditText
                    android:id="@+id/et_account_name_login_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_pwd_hint" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_account_name_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_selector"
                android:text="@string/name_login_tip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_account_email_login_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_email_hint"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/et_account_email_login_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_pwd_hint"
                    android:inputType="textVisiblePassword" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_account_email_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_selector"
                android:text="@string/email_login_tip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_account_register_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_email_hint"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/et_account_register_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_email_hint"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/et_account_register_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_pwd_hint"
                    android:inputType="textVisiblePassword" />

                <EditText
                    android:id="@+id/et_account_register_repwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:hint="@string/account_input_repwd_hint"
                    android:inputType="textVisiblePassword" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_account_register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_selector"
                android:text="@string/register_tip" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_account_uploadprofile_preview"
                    android:layout_width="112dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="25dp"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/pic_bg" />

                <TextView
                    android:id="@+id/tv_account_uploadprofile_filename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/iv_account_uploadprofile_preview"
                    android:lines="1"
                    android:textColor="@color/Grey"
                    android:textSize="@dimen/font_size_default" />

                <Button
                    android:id="@+id/btn_account_choose_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_account_uploadprofile_filename"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_more" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_account_uploadprofile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_btn_selector"
                android:text="@string/uploadprofile_tip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>