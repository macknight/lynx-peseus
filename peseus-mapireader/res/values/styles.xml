<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="TabItemStyle">

        <!-- 去除原生的单选按钮图标 -->
        <item name="android:button">@null</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/Grey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/segment_selector</item>
    </style>

</resources>