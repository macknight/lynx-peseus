<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar"></style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="MainTabItemStyle">
        <!-- 去除原生的单选按钮图标 -->
        <item name="android:button">@null</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/font_size_xsmall</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/sel_main_tab_item</item>
    </style>

</resources>